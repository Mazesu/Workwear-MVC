@model Company

<div class="card shadow border-0 my-4">
    <div class="card-header bg-black bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Id!=0?"Изменить":"Добавить") Компанию</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="FullName" class="form-control border-0 shadow" />
                            <label asp-for="FullName" class="ms-2"></label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                         <div class="form-floating py-2 col-12">
                            <input asp-for="ShortName" class="form-control border-0 shadow" />
                            <label asp-for="ShortName" class="ms-2"></label>
                            <span asp-validation-for="ShortName" class="text-danger"></span>
                        </div>
                         <div class="form-floating py-2 col-12">
                            <input asp-for="INN" class="form-control border-0 shadow" />
                            <label asp-for="INN" class="ms-2"></label>
                            <span asp-validation-for="INN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="KPP" class="form-control border-0 shadow" />
                            <label asp-for="KPP" class="ms-2"></label>
                            <span asp-validation-for="KPP" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="OGRN" class="form-control border-0 shadow" />
                            <label asp-for="OGRN" class="ms-2"></label>
                            <span asp-validation-for="OGRN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City" class="form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2">Город</label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="LegalAddress" class="form-control border-0 shadow" />
                            <label asp-for="LegalAddress" class="ms-2"></label>
                            <span asp-validation-for="LegalAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ActualAddress" class="form-control border-0 shadow" />
                            <label asp-for="ActualAddress" class="ms-2"></label>
                            <span asp-validation-for="ActualAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" class="form-control border-0 shadow" />
                            <label asp-for="PostalCode" class="ms-2">Почтовый индекс</label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2">Контактный номер телефона</label>
                        </div>
                        
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Изменить</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Добавить</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Назад</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists  visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent ',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}