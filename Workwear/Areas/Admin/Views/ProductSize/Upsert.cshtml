@model ProductSizeVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-dark ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.ProductSize.Id!=0?"Изменить":"Добавить") размер</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ProductSize.Id" hidden/>
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <select asp-for="ProductSize.ProductId" asp-items="@Model.ProductList" class="form-control border-0 shadow">
                        <option disabled selected>Выберите товар</option>
                    </select>
                    <label asp-for="ProductSize.ProductId" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductSize.SizeName" class="form-control border-0 shadow" />
                    <label asp-for="ProductSize.SizeName" class="ms-2"></label>
                    <span asp-validation-for="ProductSize.SizeName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProductSize.Quantity" class="form-control border-0 shadow" />
                    <label asp-for="ProductSize.Quantity" class="ms-2"></label>
                    <span asp-validation-for="ProductSize.Quantity" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.ProductSize.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Изменить</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Создать</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ProductSize" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Назад
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
